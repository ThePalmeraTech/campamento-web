    <style>
      /* app/assets/stylesheets/application.css */
      .badge-completed {
        background-color: #28a745; /* Verde, puedes cambiar el código de color según tus necesidades */
      }

      .badge-not-completed {
        background-color: #dc3545; /* Rojo, también ajustable */
      }

    </style>
  </head>

  <body>
 <% if user_signed_in? %>
<%= render 'layouts/navbar' %>

  <% end %>



    <div class="container">
          <%= yield %>
    </div>

    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

  </body>
</html>
