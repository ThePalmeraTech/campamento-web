      /* app/assets/stylesheets/application.css */
.notice, .alert {
  position: fixed;
  bottom: 20px;
  right: 20px;
  display: block; /* Quita display:none para pruebas iniciales */
  background: white;
  padding: 10px;
  border: 1px solid black;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0,0,0,0.5);
  z-index: 1000;
}

.d-none {
  display: none;
}

 body {
    background-color: #b0e7e4;
    color: #fff;
  }

  .nav-underline .nav-link {
    color: #adb5bd;
  }

  .nav-underline .nav-link.active {
    color: #007bff;
    border-color: #007bff;
  }

  .form-control, .form-select, .form-check-input {
    color: #000;
    background-color:rgb(255 255 255 / 64%) !important;
    border-color: #0fb39c;
  }

  .form-control::placeholder {
    color: #ced4da;
  }

  .btn-primary {
    background-color: #19d3b9;
    border-color:   #0fb39c
  }

  .btn-secondary {
    background-color: #6c757d;
    border-color: #6c757d;
  }

  .step {
    display: none;
    padding: 20px;
    border: 1px solid #ced4da;
    margin-top: 20px;
    border-radius: 0.25rem;
  }

  .step-active {
    display: block;
  }

  .step-completed {
    background-color: #198754; /* Verde, indicando completado */
    color: #ffffff;
  }

  /* Estilos personalizados para inputs de archivo */
  .custom-file-input {
    visibility: hidden;
    width: 0;
    height: 0;
  }

  .custom-file-label {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    color: #495057;
    text-align: center;
    background-color: #e9ecef;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    cursor: pointer;
  }

  .custom-file-label:hover {
    background-color: #dee2e6;
  }

  .custom-file-label::after {
    content: 'Seleccionar archivo';
  }

  .custom-file-input {
    display: none;
  }

  .custom-file-label {
    display: block;
    cursor: pointer;
    text-align: center;
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 0.25rem; /* Faltaba cerrar esta propiedad */
  }

  /* Animación de entrada */
.fade-in {
  animation: fadeIn 0.9s ease-out forwards;
}

/* Animación de salida */
.fade-out {
  animation: fadeOut 0.5s ease-out forwards;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeOut {
  from { opacity: 1; }
  to { opacity: 0; }
}


.img-preview {
  width: 100%;
  max-height: 200px;
  margin-top: 10px;
}

.progress {
    height: 2rem;
}

.progress-bar {
    background-color: #06bda3;
    transition: width .8s ease;
}

.list-group-item {
    padding: 1.5rem 1rem;
}

.list-group-item.active {
    background-color: #19d3b9;
    border-color: #0fb39c;
}

.nav-link {
    color: #181818;
}

.navbar-brand {

    font-weight: bold;
    color: #181818;
}

.bg-light {
  background:rgb(255 255 255 / 64%) !important
}

.table-hover>tbody>tr:hover>* {
    --bs-table-accent-bg: rgb(223 241 240 / 71%);
}

.yappy {
  background-color:#ffffff99
}

.ach {
  background-color:#ffffff99
}

.ach p {
  background-color:#ffffff99
  padding:10px;
}


#mensaje-copiado {
  display: none;
  opacity: 0;
  transition: opacity 0.5s ease-in-out; /* Transición suave de 0.5 segundos */
}


.pricing-info {
    background-color: #ffffff; /* Fondo blanco */
    border: 1px solid #e0e0e0; /* Borde sutil */
    border-radius: 8px; /* Bordes redondeados más pronunciados */
    box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Sombra sutil para profundidad */
}

.pricing-info h4, .pricing-info p {
    margin-bottom: 12px; /* Espaciado entre elementos aumentado */
}

.original-price {
    color: #dc3545; /* Rojo para resaltar el precio original */
    text-decoration: line-through; /* Tachado más claro */
}

.discount-text {
    font-size: 16px; /* Tamaño de fuente para el texto de descuento */
    font-weight: 500; /* Peso de la fuente para importancia moderada */
}

.text-success {
    color: #28a745; /* Verde brillante para resaltar el descuento */
}

.total-price {
    font-size: 18px; /* Tamaño de fuente mayor para el total */
    font-weight: 600; /* Peso de fuente más fuerte para enfatizar el total */
}

.text-primary {
    color: #007bff; /* Azul brillante para destacar el total a pagar */
}



/* UPLOAD FILE PROOF OF PAYMENT */

.custom-file-upload {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px dashed #ccc;
  border-radius: 4px;
  padding: 20px;
  text-align: center;
  cursor: pointer;
  width: 100%;
  color: #666;
  font-size: 16px;
}

.custom-file-upload input[type="file"] {
  display: none;
}

.custom-file-upload:hover {
  background-color: #f0f0f0;
}






