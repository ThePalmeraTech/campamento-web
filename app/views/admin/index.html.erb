<h1>User Approvals</h1>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Nombre</th>
      <th>Aprobado</th>
      <th>Acciones</th>
      <th>Perfil</th>
      <th></th> <!-- Columna para la acción de borrar -->
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.full_name %></td>
        <td><%= user.approved ? 'Sí' : 'No' %></td>
        <td>
          <%= form_with model: user, url: approve_user_path(user), method: :patch do |f| %>
            <%= f.hidden_field :approved, value: true %>
            <%= f.submit "Aprobar", class: 'btn btn-success' %>
          <% end %>
        </td>
<td><%= link_to 'Ver Perfil', profile_user_path(user), class: 'btn btn-info' %></td>

        <td>
          <%= link_to 'Eliminar', user_path(user), data: { turbo_method: :delete, turbo_confirm: '¿Estás seguro de que deseas eliminar este usuario?' }, class: 'btn btn-danger' %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
