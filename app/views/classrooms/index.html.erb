<!-- app/views/classrooms/index.html.erb -->
<div class="container mt-4">
  <h1>Classrooms</h1>

  <div class="my-3">
    <%= link_to 'Create New Classroom', new_classroom_path, class: 'btn btn-success' %>
  </div>

  <table class="table table-hover">
    <thead class="table-dark">
      <tr>
        <th>Teacher</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @classrooms.each do |classroom| %>
        <tr>
          <td><%= classroom.teacher.full_name %></td>
          <td><%= classroom.status %></td>
          <td>
            <%= link_to 'Show', classroom, class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Edit', edit_classroom_path(classroom), class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Delete', classroom, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
